# Copy this file to .env and adjust values
############################

# Server
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=changeme

# Database (SQLite by default)
DATABASE_TYPE=sqlite
# Relative path works for local dev; use absolute path in production
DB_FILE=./database.sqlite
